<div class="container is-max-desktop">
  <div class="notification ">
  <div class="columns is-mobile">
  <div class="column is-three-fifths is-offset-one-fifth">
<div class="is-size-1">Sign up</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :authorid, 'Author ID' %><br />
    <%= f.text_field :authorid, autofocus: true ,  class: "input is-large"%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "input is-large" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", autofocus: true ,  class: "input is-large" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true ,  class: "input is-large" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "button is-large is-fullwidth" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>  
  </div>  </div>  
  </div>